# Meeting Copilot - Environment Configuration
# Developed by: Ruslan Magana (contact@ruslanmv.com)
#
# Copy this file to .env and fill in your API keys

# ============================================================================
# IBM Watson Speech-to-Text (REQUIRED)
# ============================================================================
# Get your API key from: https://cloud.ibm.com/catalog/services/speech-to-text
IBM_SPEECH_TO_TEXT_API=your_ibm_stt_api_key_here
IBM_STT_URL=https://api.us-south.speech-to-text.watson.cloud.ibm.com/instances/your-instance-id
IBM_STT_MODEL=en-US_BroadbandModel

# ============================================================================
# LLM Provider Selection (DEFAULT: watsonx - we love IBM!)
# ============================================================================
# Options: watsonx, openai, claude, ollama
LLM_PROVIDER=watsonx

# ============================================================================
# IBM watsonx.ai (DEFAULT LLM PROVIDER - REQUIRED)
# ============================================================================
# Get your credentials from: https://cloud.ibm.com/catalog/services/watsonx-ai
WATSONX_API_KEY=your_watsonx_api_key_here
WATSONX_PROJECT_ID=your_watsonx_project_id_here
WATSONX_MODEL_ID=meta-llama/llama-3-3-70b-instruct
WATSONX_BASE_URL=https://us-south.ml.cloud.ibm.com
WATSONX_TEMPERATURE=0.7
WATSONX_MAX_TOKENS=1024

# ============================================================================
# OpenAI API (Alternative LLM Provider)
# ============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=
OPENAI_TEMPERATURE=0.7

# ============================================================================
# Anthropic Claude (Alternative LLM Provider)
# ============================================================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-sonnet-4-5
CLAUDE_BASE_URL=
CLAUDE_TEMPERATURE=0.7

# ============================================================================
# Ollama (Local LLM Provider)
# ============================================================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# ============================================================================
# Text-to-Speech Configuration
# ============================================================================
# Choose TTS provider: "ibm" or "edge" (edge is free, no API key needed)
TTS_PROVIDER=edge

# Edge TTS Settings (FREE - no API key required)
EDGE_TTS_VOICE=en-US-GuyNeural

# IBM Watson TTS Settings (OPTIONAL - only if TTS_PROVIDER=ibm)
IBM_TTS_API_KEY=your_ibm_tts_api_key_here
IBM_TTS_URL=https://api.us-south.text-to-speech.watson.cloud.ibm.com/instances/your-instance-id
IBM_TTS_VOICE=en-US_AllisonV3Voice

# ============================================================================
# Bot Configuration
# ============================================================================
# Wake word / bot name (case-insensitive)
BOT_NAME=watson

# Audio settings
SAMPLE_RATE=16000
CHANNELS=1
CHUNK_SIZE=480

# VAD (Voice Activity Detection) settings
VAD_AGGRESSIVENESS=2
VAD_FRAME_MS=30
VAD_PADDING_MS=300

# Buffer settings (seconds)
PREWAKE_BUFFER_SECONDS=20
MAX_UTTERANCE_SECONDS=30

# ============================================================================
# Audio Input Source
# ============================================================================
# Options: "microphone", "system", "both"
AUDIO_SOURCE=microphone

# ============================================================================
# Assistant Mode
# ============================================================================
# Default mode: "answer", "opinion", "summarize"
DEFAULT_MODE=answer

# ============================================================================
# Privacy Settings
# ============================================================================
# Enable conversation logging (opt-in)
ENABLE_LOGGING=false
LOG_DIRECTORY=logs
ENCRYPT_LOGS=true

# ============================================================================
# UI Settings
# ============================================================================
SHOW_TRANSCRIPT=true
SHOW_CONFIDENCE=false
ENABLE_TRAY_ICON=true

# ============================================================================
# Performance
# ============================================================================
# Target latency from wake to response (milliseconds)
LATENCY_TARGET_MS=2500

# ============================================================================
# Development
# ============================================================================
DEBUG=false
CONSOLE_MODE=false
